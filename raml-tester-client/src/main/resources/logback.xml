<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="C" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5p - %-30C{30}: %m%n</pattern>
        </encoder>
    </appender>

    <logger name="org.eclipse.jetty" level="WARN"/>
    <logger name="org.raml.parser" level="WARN"/>
    <logger name="org.apache.http" level="WARN"/>
    <logger name="org.apache.http" level="WARN"/>
    <logger name="guru.nidi.ramlproxy.jetty.JettyProxyServlet" level="INFO"/>

    <root level="DEBUG">
        <appender-ref ref="C"/>
    </root>
</configuration>
